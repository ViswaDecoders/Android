<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.neeru.app8_combined1_7.MainActivity"
    android:background="@color/highlighted_text_material_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apps"
        android:id="@+id/textView3"
        android:textSize="70dp"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#885508" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Text"
            android:id="@+id/button14"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="54dp"
            android:backgroundTint="#5f66e6"
            android:textSize="20dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media player"
            android:textSize="20dp"
            android:id="@+id/button16"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="#5bdf80"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wi-fi"
            android:id="@+id/button18"
            android:layout_marginTop="71dp"
            android:textSize="20dp"
            android:backgroundTint="#64d8e9"
            android:layout_below="@+id/button16"
            android:layout_alignEnd="@+id/button14"
            android:layout_marginBottom="50dp"
            android:layout_gravity="left|bottom|"
            android:layout_margin="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torch"
            android:id="@+id/button19"
            android:layout_alignBottom="@+id/button18"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="50dp"
            android:textSize="20dp"
            android:backgroundTint="#ef9458"
            android:layout_gravity="right|bottom"
            android:layout_margin="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth "
            android:id="@+id/button17"
            android:layout_alignBottom="@+id/button16"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#e9c24f"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:id="@+id/button15"
            android:textSize="20dp"
            android:layout_alignTop="@+id/button14"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#dd6bec"
            android:layout_marginTop="54dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dp" />
    </FrameLayout>
</RelativeLayout>

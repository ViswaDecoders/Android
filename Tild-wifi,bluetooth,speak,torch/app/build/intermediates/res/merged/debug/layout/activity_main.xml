<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.neeru.tild_wifibluetoothspeaktorch.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="179dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/bluetoothoff" />

        <ImageView
            android:layout_width="169dp"
            android:layout_height="148dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/off2" />

        <ImageView
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:id="@+id/imageView4"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/mute" />

        <ImageView
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/wifi_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" X-axis"
            android:id="@+id/textView"
            android:layout_gravity="left|top"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y-axis"
            android:id="@+id/textView2"
            android:layout_gravity="right|top"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z-axis"
            android:id="@+id/textView3"
            android:layout_gravity="left|bottom"
            android:textSize="25dp"
            android:layout_marginBottom="100dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Note: Enable the AUTO-ROTATE option"
            android:id="@+id/textView4"
            android:layout_gravity="right|bottom"
            android:textStyle="bold|italic"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_gravity="left|top"
            android:textSize="25dp"
            android:layout_marginTop="30dp"
            android:text="New text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_gravity="right|top"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:text="New text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_gravity="left|bottom"
            android:textSize="25dp"
            android:layout_marginBottom="75dp"
            android:text="New text" />
    </FrameLayout>
</RelativeLayout>
